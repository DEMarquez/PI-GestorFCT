{% extends 'GestorFCTBundle:Default:frontend.html.twig' %}

{% block main %}
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-check-square fa-fw"></i> Tabla de Asignaciones FCT</h3>
          </div>
          <div class="panel-body">
              <div class="table-responsive">
                  <table class="table table-bordered table-hover table-striped">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Fecha Asignacion</th>
                          <th>Nombre Profesor</th>
                          <th>Nombre Empresa</th>
                          <th>Nombre Alumno</th>
                          <th>Acciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for item in asignaciones %}
                          <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.fecha.date }}</td>
                            <td>{{ item.idProfesor.nombre }}</td>
                            <td>{{ item.idEmpresa.nombre }}</td>
                            <td>{{ item.idAlumno.nombre }}</td>
                            <td>
                              <a class="btn btn-danger btn-xs delete-button" href="{{path('Asignaciones_delete',{'id':item.id})}}"><i class="fa fa-times"></i>Eliminar</a>
                              <a class="btn btn-warning btn-xs" href="{{path('Asignaciones_update',{'id':item.id})}}"><i class="fa fa-pencil"></i>Modificar</a>
                            </td>
                          <tr>
                        {% endfor %}
                      </tbody>
                  </table>
              </div>
              <div class="text-right">
                  <a href="#">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
