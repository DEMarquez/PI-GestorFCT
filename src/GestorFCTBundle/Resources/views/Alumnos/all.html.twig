{% extends 'GestorFCTBundle:Default:frontend.html.twig' %}

{% block main %}
  <div id="page-wrapper">
  <div class="container-fluid">
    <div class="col-lg-12">
      <div class="panel panel-default">
          <div class="panel-heading">
              <h3 class="panel-title"><i class="fa fa-graduation-cap fa-fw"></i> Tabla de Alumnos FCT</h3>
          </div>
          <div class="panel-body">
              <div class="table-responsive">
                  <table class="table table-bordered table-hover table-striped">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Nombre</th>
                          <th>DNI</th>
                          <th>Direccion</th>
                          <th>Telefono</th>
                          <th>Residencia</th>
                          <th>Transporte</th>
                          <th>Grupo</th>
                          <th>Acciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for item in alumnos %}
                          <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.nombre }}</td>
                            <td>{{ item.dni }}</td>
                            <td>{{ item.direccion }}</td>
                            <td>{{ item.Telefono }}</td>
                            <td>{{ item.residencia }}</td>
                            <td>{{ item.transporte }}</td>
                            <td>{{ item.grupo.nombre }}</td>
                            <td>
                              <a class="btn btn-danger btn-xs delete-button" href="{{path('Alumnos_delete',{'id':item.id})}}"><i class="fa fa-times"></i>Eliminar</a>
                              <a class="btn btn-warning btn-xs" href="{{path('Alumnos_update',{'id':item.id})}}"><i class="fa fa-pencil"></i>Modificar</a>
                            </td>
                          <tr>
                        {% endfor %}
                      </tbody>
                  </table>
              </div>
              <div class="text-right">
                  <a href="#">View All Transactions <i class="fa fa-arrow-circle-right"></i></a>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
